                    <option value="/item/keys/lost">Keys</option>
                    <option value="/item/miscellaneous/lost">Miscellaneous</option>
                    <option value="/item/money/lost">Money</option>
                    <option value="/item/sports/lost">Sports equipment</option>
                </select>
                <div class="invalid-feedback">
                    Please select a valid category.
                </div>
              </div></center>
            </div>
          </div>
        </div>
