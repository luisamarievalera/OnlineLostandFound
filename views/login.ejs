    <script>
        var urlParams;
        (window.onpopstate = function () {
            var match,
                pl     = /\+/g,  // Regex for replacing addition symbol with a space
                search = /([^&=]+)=?([^&]*)/g,
                decode = function (s) { return decodeURIComponent(s.replace(pl, " ")); },
                query  = window.location.search.substring(1);
        
            urlParams = {};
            while (match = search.exec(query))
            urlParams[decode(match[1])] = decode(match[2]);
        })();
        if (urlParams.status == "success") {
            const alert = document.getElementById("alert-success");
            alert.style.animation = "success 3.5s";
        } else if (urlParams.status == "error") {
            const alert = document.getElementById("alert-error");
            alert.style.animation = "error 3.5s";
        } else if (urlParams.status == "register") {
            const alert = document.getElementById("alert-register");
            alert.style.animation = "register 3.5s";
        } else if (urlParams.status == "email-verified") {
            const alert = document.getElementById("alert-verified");
            alert.style.animation = "register 3.5s";
        } else if (urlParams.status == "invalid-verification-code") {
            const alert = document.getElementById("alert-invalid");
            alert.style.animation = "error 3.5s";
        }
    </script>
